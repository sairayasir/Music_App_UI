<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent interior with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />  <!-- Transparent interior color -->
            <stroke
                android:color="@android:color/white"
                android:width="3dp"/>
        </shape>
    </item>

    <!-- Black border -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" /> <!-- Match the same radius as above -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Black border color -->
        </shape>
    </item>
</layer-list>